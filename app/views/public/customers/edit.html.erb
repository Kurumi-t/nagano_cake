<div class="container">
  <div class="row pt-3">
    <div class="col-md-8 offset-md-1">
      <h5><span class="bg-light">　会員情報編集　</span></h5>
    </div>
    <div class="col-9 mt-3">
      <%= form_with model: @customer do |f| %>
        <table class="table table-borderless table-sm">
          <tbody>
            <tr>
              <td class="col-3">氏名</td>
              <td class="col-3"><%= f.text_field :last_name, class: "form-control border-dark" %></td>
              <td class="col-1"></td>
              <td class="col-3"><%= f.text_field :first_name, class: "form-control border-dark" %></td>
            <tr>
            <tr>
              <td class="col-3">フリガナ</td>
              <td class="col-3"><%= f.text_field :last_name_kana, class: "form-control border-dark" %></td>
              <td class="col-1"></td>
              <td class="col-3"><%= f.text_field :first_name_kana, class: "form-control border-dark" %></td>
            </tr>
            <tr>
              <td class="col-3">郵便番号</td>
              <td class="col-3"><%= f.text_field :postal_code, class: "form-control border-dark" %></td>
            </tr>
            <tr>
              <td class="col-3">住所</td>
              <td colspan="4"><%= f.text_field :address, class: "form-control border-dark" %></td>
            </tr>
            <tr>
              <td class="col-3">電話番号</td>
              <td class="col-3"><%= f.text_field :telephone_number, class: "form-control border-dark" %></td>
            </tr>
            <tr>
              <td class="col-3">メールアドレス</td>
              <td class="col-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
            </tr>
            <tr>
              <td class="col-3"></td>
              <td colspan="2" class="col-3"><%= f.submit '　　　編集内容を保存　　　', class:"btn btn-success" %></td>
              <td></td>
              <td class="col-3"><%= link_to("　退会する　", customers_withdraw_path, class: "btn btn-danger") %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>