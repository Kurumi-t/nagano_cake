<div class="container">
  <div class="row pt-3">
    <div class="col-3">
      <table class="table table-sm table-borderless">
        <thead class="border border-dark">
          <th>ジャンル検索</th>
        </thead>
        <tbody class="border border-dark">
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <%= image_tag @item.get_image(360,180) %>
    </div>
    <div class="col-6 pl-5">
      <h3><b><%= @item.name %></b></h3>
      <p class="h5"><%= @item.introduction %></p>
      <p><b class="h3">￥<%= @item.with_tax_price.to_s(:delimited) %></b>（税込）</p>
      <%= form_with model: @cart_item do |f| %>
        <div class="form-group">
          <div class="form-inline">
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.select :amount, [*(1..10)], {include_blank: "個数選択"},{class:"col-4 form_control mx-3",required: true } %>
            <%= f.submit 'カートに入れる', class:"btn btn-success mx-5" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>