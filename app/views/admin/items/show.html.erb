<div class="container">
  <h4>商品詳細</h4>
    <%= image_tag @item.get_image(180,100) %>
    <table>
      <tbody>
        <tr>
          <td><span>商品名</span></td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td><span>商品説明</span></td>
          <td><%= @item.introduction %></td>
        </tr>
          <td><span>ジャンル</span></td>
          <td><%= @genre.name %></td>
        </tr>
        </tr>
          <td><span>税抜価格<br>(税抜価格)</span></td>
          <td><%= @item.price %>円</td>
        </tr>
        </tr>
          <td><span>販売ステータス</span></td>
          <td>
            <%= @item.is_active %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to("編集する", edit_admin_item_path(@item.id), class: "btn btn-success") %>
</div>
