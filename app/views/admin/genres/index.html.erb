<div class="container">
  <h4>ジャンル一覧・追加</h4>
    <%= form_with model: [:admin, @genre] do |f| %>
      <label for="genre_name">ジャンル名</label>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class:"btn btn-success" %>
	  <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to("編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success") %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>
