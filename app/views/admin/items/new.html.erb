<div class="container">
  <h5><span class="bg-light">　商品新規登録　</span></h5>
  <div class="row mt-5">
    <div class="col-6 mx-auto">
    <%= form_with model: [:admin, @item] do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="col-3">商品画像</td>
            <td class="col-8"><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td class="col-3">商品名</td>
            <td class="col-8"><%= f.text_field :name, class: "form-control-sm form-control border-dark" %></td>
          </tr>
          <tr>
            <td class="col-4">商品説明</td>
            <td class="col-8"><%= f.text_area :introduction, size: "20x5", class: "form-control border-dark", rows: "3" %></td>
          </tr>
          <tr>
            <td class="col-4">ジャンル</td>
            <td class="col-8"><%= f.collection_select :genre_id, Genre.order(:name), :id, :name, {include_blank: "--選択してください--"},{ id: "genre_id", class: "form-select" } %></td>
          </tr>
          <tr>
            <td class="col-4">税抜価格</td>
            <td class="col-8"><%= f.text_field :price, class: "form-control form-control-sm border-dark" %></td>
            <td>円</td>
          </tr>
          <tr>
            <td class="col-4">販売ステータス</td>
            <td class="col-8">
              <%= f.radio_button :is_active, value: true %>
              <%= f.label :is_active, "販売中　", {value: :true, style: "display: inline-block;"} %>
            
              <%= f.radio_button :is_active, value: false %>
              <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="form group text-center">
        <%= f.submit '　新規登録　', class:"btn btn-lg btn-success" %>
      </div>
	  <% end %>
	  </div>
	</div>
</div>