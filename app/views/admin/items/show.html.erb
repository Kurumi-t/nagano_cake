<div class="container">
  <div class="offset-md-1 mt-5">
    <span class="bg-light px-4 h5">商品詳細</span>
  </div>
  <div class="row pt-5">
    <div class="col-4 text-right">
      <%= image_tag @item.get_image(400,200) %>
    </div>
    <div class="col-7">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="col-3">商品名</td>
            <td class="h5"><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td class="h5"><%= @item.introduction %></td>
          <tr>
            <td>ジャンル</td>
            <td class="h5"><%= @genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td class="align-middle h5"><%= @item.with_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
            </tr>
          <tr>
            <td>販売ステータス</td>
            <td class="h5">
              <% if @item.is_active == true %>
                <p class="text-success"><b>販売中</b></p>
              <% else %>
                <p class="text-black-50"><b>販売停止中</b></p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-12 text-center">
      <%= link_to("編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-lg px-5") %>
    </div>
  </div>
</div>
