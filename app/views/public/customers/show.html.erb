<div class="container">
  <div class="row pt-3">
    <div class="col-3">
      <table class="table table-sm border">
        <thead>
          <th>ジャンル検索</th>
        </thead>
        <tbody class="table-borderless">
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-9">
      <p class="h3"><b>商品一覧</b>（全件）</p>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3">
            <%= image_tag item.get_image(180,100) %>
            <p>
              <%= link_to(admin_item_path(item.id), class: "text-dark") do %>
                <%= item.name %>
              <% end %>
            </p>
            <p>￥<%= item.price %></p>
          </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>