<div class="container">
  <span class="bg-light mx-5 h5">　ジャンル一覧・追加　</span>
   <div class="row mt-5">
    <div class="col-sm-6 col-md-6 col-lg-4">
      <%= form_with model: [:admin, @genre] do |f| %>
      <label for="genre_name"><b>ジャンル名</b></label>
      <%= f.text_field :name, placeholder: 'ジャンル名', class: "float-right" %>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-8 px-5">
      <%= f.submit '　新規登録　', class:"btn btn-success font-weight-bold" %>
    <% end %>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-4 px-sm-0 mt-5">
      <table class="table border-bottom">
        <thead class="bg-light">
          <tr>
            <th></th>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td colspan="2"><%= genre.name %></td>
            <td class="text-right">
              <%= link_to("　編集する　", edit_admin_genre_path(genre.id), class: "btn btn-success mx-3") %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
