<div class="container">
  <div class="row pt-5">
    <div class="col-3 px-5">
      <table class="table table-sm table-borderless">
        <thead class="border border-dark">
          <th class="text-center">ジャンル検索</th>
        </thead>
        <tbody class="border border-dark">
          <% @genres.each do |genre| %>
            <tr>
              <td class="pl-3"><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-9">
      <div class="form-inline">
        <h3><b>商品一覧</b></h3>
        <h5>（全<%= @item_count %>件）</h5>
      </div>
      <div class="row pt-3">
        <% @items.each do |item| %>
          <div class="col-3">
            <%= image_tag item.get_image(180,100) %>
            <p>
              <%= link_to(item_path(item.id), class: "text-dark") do %>
                <%= item.name %>
              <% end %>
            </p>
            <p>￥<%= item.price.to_s(:delimited) %></p>
          </div>
        <% end %>
      </div>
      <div class="row justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>