<div class="container">
  <h2>商品新規登録</h2>
    <%= form_with model: [:admin, @item] do |f| %>
      <h4>商品画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
      <h4>商品名</h4>
        <%= f.text_field :item_name %>
      <h4>商品説明</h4>
        <%= f.text_area :introduction %>
      <h4>ジャンル</h4>
        <%= f.collection_select :name, @item.genre, :name, :name, include_blank: "--選択してください--" %>
      
      <h4>税抜価格</h4>
        <%= f.text_field :price %>
      <h4>販売ステータス</h4>
        販売中 販売停止中
      <%= f.submit '新規登録', class:"btn btn-success" %>
	  <% end %>