<div class="container">
  <span class="bg-light mx-5 h5">　管理者ログイン　</span>
  <div class="row mt-5">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-2">
    <%= form_with model: @admin, url: admin_session_path do |f| %>
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-lg-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "form-control border-dark" %>
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-2">
      <%= f.label :パスワード %>
    </div>
    <div class="col-lg-5">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-dark" %>
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-6 offset-md-5">
      <%= f.submit "　ログイン　", class:"btn btn-info" %>
    </div>
    <% end %>
    <%= render "admin/shared/links" %>
  </div>
</div>