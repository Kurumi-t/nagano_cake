<div class="container">
  <p>ジャンル<strong>一覧・追加</strong></p>
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-4 px-5 px-sm-0"> 
      <%= form_with model: [:admin, @genre] do |f| %>
      <label for="genre_name"><b>ジャンル名</b></label>
      <%= f.text_field :name %>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0">
      <%= f.submit '新規登録', class:"btn btn-success" %>
    <% end %>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-4 px-5 px-sm-0">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%= link_to("編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success") %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
