<div class="container">
  <div class="offset-md-1 mt-5">
    <span class="bg-light px-4 h5">マイページ</span>
  </div>
  <div class="row pt-4">
    <p class="h4"><b>登録情報</b></p>
    <%= link_to("編集する", edit_customer_path(@customer.id), class: "btn btn-success px-4 ml-5") %>
  </div>
  <div class="row mt-3">
    <table class="col-8 table table-bordered border-dark">
      <tbody>
        <tr>
          <td class="col-1 table-active">氏名</td>
          <td class="col-3"><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td class="table-active">カナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="table-active">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="table-active">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="table-active">電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="table-active">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row pt-3">
    <p class="h4"><b>配送先　</b></p>
    <%= link_to("一覧を見る", addresses_path, class: "btn btn-primary px-4 mx-5") %>
    <div class="col-7"></div>
  </div>
  <div class="row pt-3">
    <p class="h4"><b>注文履歴</b></p>
    <%= link_to("一覧を見る", orders_path, class: "btn btn-primary px-4 mx-5") %>
    <div class="col-7"></div>
  </div>
</div>