<div class="container">
  <h5><span class="bg-light mt-3">　ショッピングカート　</span></h5>
  <div class="row mt-3">
    <div class="col-12 mt-3">
      <table class="table table-bordered border-dark">
        <thead class="bg-light">
          <tr>
            <th class="col-5">商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
      <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td class="col-5"><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
              <%=form_with model: @cart_item do |f| %>
                <%= f.select :amount, [*(1..10)], { class: "form_control" } %></td>
                <%= f.submit '変更', class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to("削除する", cart_items_path, method: :delete, class: "btn btn-danger mx-2") %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-6 mt-3">
      <%= link_to("買い物を続ける", root_path, class: "btn btn-info") %>
      <table align="right">
        <tbody>
          <tr>
            <th class="bg-light"><% @total_price +=  cart_item.subtotal %></th>
            <th></th>
          </tr>
        </tbody>
      </table>
    </div>
    <% end %>
    <div class="text-center">
      <%= link_to("情報入力に進む", new_order_path, class: "btn btn-success") %>
    </div>
  </div>
</div>