<div class="container">
  <div class="offset-md-1 mt-5">
    <span class="bg-light px-4 h5">注文履歴一覧</span>
  </div>
  <div class="row mt-5">
    <table class="table table-bordered border-dark">
      <thead class="bg-light">
        <tr>
          <td>注文日</td>
          <td class="col-5">配送先</td>
          <td>注文商品</td>
          <td class="col-1">支払金額</td>
          <td>ステータス</td>
          <td>注文詳細</td>
        </tr>
      </thead>
      <% @orders.each do |order| %>
        <tbody class="table-sm">
          <tr>
            <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postal_code %></br>
              <%= order.address %></br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <p class="lh-sm"><%= order_detail.item.name %></p>
              <% end %>
            </td>
            <td class="align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>
            <td class="align-middle"><%= order.status_i18n %></td>
            <td class="align-middle text-center"><%= link_to("表示する", order_path(order.id), class: "btn btn-primary") %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>