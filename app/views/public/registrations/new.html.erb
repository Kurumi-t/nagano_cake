<div class="container">
  <h4>新規会員登録</h4>
  <div class="col-md-8 offset-md-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <table class="table">
        <tbody>
          <div class="field">
            <tr>
              <td><label>名前</label></td>
              <td>(性)</td>
              <td><%= f.text_field :last_name %></td>
              <td>(名)</td>
              <td><%= f.text_field :first_name %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <td><label>フリガナ</label></td>
              <td>(セイ)</td>
              <td><%= f.text_field :last_name_kana %></td>
              <td>(メイ)</td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <td><label>メールアドレス</label></td>
              <td></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
          </div> 
          <div class="field">
            <tr>
              <td><label>郵便番号(ハイフンなし)</label></td>
              <td></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <td><label>住所</label>
              </td>
              <td></td>
              <td><%= f.text_area :address %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <td><label>電話番号(ハイフンなし)</label></td>
              <td></td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <td><label>パスワード(６文字以上)</label></td>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <td><label>パスワード(確認用)</label></td>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
          </div>
        </tbody>
      </table>
      <div class="actions">
        <%= f.submit '新規登録', class:"btn btn-success" %>
      </div>
    <% end %>
    <h4>既に登録済みの方</h4>
    <p><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</p>
  </div>
  <%= render "public/shared/links" %>
</div>