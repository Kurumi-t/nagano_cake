<div class="container">
  <h5><span class="bg-light">　注文履歴一覧　</span></h5>
  <div class="row">
    <div class="col-lg-10 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.customer_last_name %><%= order.customer_first_name %></td>
            <td><%= order.order_details.amount %></td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @orders %>
  </div>
</div>