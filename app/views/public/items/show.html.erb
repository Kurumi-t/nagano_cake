<div class="container">
  <div class="row pt-3">
    <div class="col-3">
      <table class="table table-sm table-borderless">
        <thead class="border border-dark">
          <th>ジャンル検索</th>
        </thead>
        <tbody class="border border-dark">
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <%= image_tag @item.get_image(180,100) %>
    </div>
    <div class="col-6">
      <h3><b><%= @item.name %></b></h3>
      <p class="h5"><%= @item.introduction %></p>
      <p class=""><b class="h3">￥<%= item.price %></b>（税込）</p>
    </div>
    <div class="col-6">
    </div>
    <div class="col-3">
      個数選択
    </div>
    <div class="col-3">
      <%= link_to("カートに入れる", cart_items_path, method: :post, class: "btn btn-primary") %>
    </div>
  </div>
</div>