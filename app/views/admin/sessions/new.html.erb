<div class="container">
  <span class="bg-light mx-5 h5">　管理者ログイン　</span>
  <div class="row mt-5">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <label for="email_field">メールアドレス</label>
    </div>
    <div class="col-lg-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@example.com', class: "form-control float-right" %>
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-2">
      <%= f.label :パスワード %>
    </div>
    <div class="col-lg-6">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
    <div class="col-lg-2">
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-lg-5">
    </div>
    <div class="actions col-lg-7 mx-auto">
      <%= f.submit "　ログイン　", class:"btn btn-info" %>
    </div>
    <% end %>
    <%= render "admin/shared/links" %>
    
  </div>
</div>