<div class="container">
  <h5><span class="bg-light mt-3 px-4">注文履歴一覧</span></h5>
  <div class="row mt-3">
    <div class="col-12 mt-3">
      <table class="table table-bordered border-dark">
        <thead class="bg-light">
          <tr>
            <td>注文日</td>
            <td>配送先</td>
            <td>注文商品</td>
            <td>支払金額</td>
            <td>ステータス</td>
            <td>注文詳細</td>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <% @order_details.each do |order_detail| %>
        <tbody>
          <tr>
            <th><%= order.created_at %></th>
            <th class="col-3"><%= order.address_display %></th>
            <th><%= order_detail.item.name %></th>
            <th><%= order.total_payment.to_s(:delimited) %>円</th>
            <th><%= order_detail.making_status_i18n %></th>
            <th><%= link_to("表示する", order_path(order.id), class: "col-2 btn btn-primary px-4 mx-5" %></th>
          </tr>
        </tbody>
        <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>