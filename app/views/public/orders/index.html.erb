<div class="container">
  <h5><span class="bg-light mt-3 px-4">注文履歴一覧</span></h5>
  <div class="row mt-3">
    <div class="col-12 mt-3">
      <table class="table table-bordered border-dark">
        <thead class="bg-light">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
            <tbody class="table-sm">
              <tr>
                <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
                <td class="col-5">
                  <p class="lh-sm">〒<%= order.postal_code %></p>
                  <p class="lh-sm"><%= order.address %></p>
                  <p class="lh-sm"><%= order.name %></p>
                </td>
                <td class="col-2">
                  <% @order_details.each do |order_detail| %>
                    <p class="lh-sm"><%= order_detail.item.name %></p>
                  <% end %>
                </td>
                <td class="align-middle"><%= order.total_payment.to_s(:delimited) %>円</td>
                <td class="align-middle"><%= order.status_i18n %></td>
                <td class="align-middle text-center"><%= link_to("表示する", order_path(order.id), class: "btn btn-primary") %></td>
              </tr>
            </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>