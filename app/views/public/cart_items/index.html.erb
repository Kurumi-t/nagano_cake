<div class="container">
  <h5><span class="bg-light mt-3">　ショッピングカート　</span></h5>
  <div class="row mt-3">
    <div class="col-12 mt-3">
      <table class="table table-bordered border-dark">
        <thead class="bg-light">
          <tr>
            <td>商品名</td>
            <td>単価（税込）</td>
            <td>数量</td>
            <td>小計</td>
            <td></td>
          </tr>
        </thead>
      <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <th class="col-5"><%= cart_item.item.name %></th>
            <th><%= cart_item.item.with_tax_price.to_s(:delimited) %></th>
            <th>
              <%=form_with model: cart_item do |f| %>
                <%= f.select :amount, [*(1..10)], { class: "form_control" } %>
                <%= f.submit '変更', class: "btn btn-success" %>
              <% end %>
            </th>
            <th><%= cart_item.subtotal.to_s(:delimited) %></th>
            <th><%= link_to("削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger mx-2") %></th>
            <% @total_price += cart_item.subtotal %>
          </tr>
        </tbody>
      <% end %>
      </table>
      <div class="col-12 mt-3">
        <%= link_to("買い物を続ける", root_path, class: "btn btn-info mx-3") %>
        <table class="col-3 table table-bordered float-right">
          <tbody>
            <tr>
              <td class="col-2 bg-light">合計金額</td>
              <th class="col-2"><%= @total_price.to_s(:delimited) %></th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= link_to("情報入力に進む", new_order_path, class: "btn btn-lg btn-success") %>
  </div>
</div>