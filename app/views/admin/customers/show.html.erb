<div class="container">
  <div class="row pt-3">
    <div class="col-md-8 offset-md-1">
      <h5><span class="bg-light">　<%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細　</span></h5>
    </div>
    <div class="col-md-8 offset-md-1 mt-3">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @customer.is_deleted == false %>
                <p class="text-success"><b>有効</b></p>
              <% else %>
                <p class="text-black-50"><b>退会</b></p>
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= link_to("　編集する　", edit_admin_customer_path(@customer.id), class: "btn btn-success") %>
            </td>
            <td>
              <%= link_to("　注文履歴一覧を見る　", admin_path, class: "btn btn-info") %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-8 offset-md-1 mt-2"> 
      
      
    </div>
  </div>
</div>