<div class="container">
  <div class="offset-md-1 mt-5">
    <span class="bg-light px-4 h5"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span>
  </div>
  <div class="row pt-3">
    <div class="col-8 offset-md-1 mt-3">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="col-3">会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @customer.is_deleted == false %>
                <b class="text-success">有効</b>
              <% else %>
                <b class="text-black-50">退会</b>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-8 offset-md-3 mt-2">
      <%= link_to("編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success px-4 mr-5") %>
      <%= link_to("注文履歴一覧を見る", admin_path, class: "btn btn-info px-4 ml-5") %>
    </div>
  </div>
</div>