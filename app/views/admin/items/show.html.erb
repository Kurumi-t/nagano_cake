<div class="container">
  <div class="row pt-3">
    <div class="col-md-8 offset-md-1">
      <h5><span class="bg-light">　商品詳細　</span></h5>
    </div>
  <div class="row pt-5">
    <div class="col-sm-12 col-md-4 col-lg-4"> 
      <%= image_tag @item.get_image(180,100) %>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-8 px-5"> 
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>商品名　　　　　</td>
            <td class="h5"><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td class="h5"><%= @item.introduction %></td>
          <tr>
            <td>ジャンル</td>
            <td class="h5"><%= @genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td class="align-middle h5"><%= @item.with_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
            </tr>
          <tr>
            <td>販売ステータス</td>
            <td class="h5">
              <% if @item.is_active == true %>
                <p class="text-success"><b>販売中</b></p>
              <% else %>
                <p class="text-black-50"><b>販売停止中</b></p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-6 offset-md-6">
      <%= link_to("　編集する　", edit_admin_item_path(@item.id), class: "btn btn-success btn-lg") %>
    </div>
  </div>
</div>
