<div class="container">
  <span class="bg-light mx-5 h5">ジャンル一覧・追加</span>
   <div class="row mt-5">
    <div class="col-12">
      <%= form_with model:@genre, url:admin_genres_path, method: :POST, local: true do |f| %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, placeholder: 'ジャンル名', class: " mx-5" %>
        <%= f.submit '新規登録', class:"btn btn-success font-weight-bold px-4" %>
      <% end %>
    </div>
    <div class="col-4 px-sm-0 mt-5">
      <table class="table border-bottom">
        <thead class="bg-light">
          <tr>
            <th></th>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td colspan="2"><%= genre.name %></td>
            <td class="text-right">
              <%= link_to("編集する", edit_admin_genre_path(genre.id), class: "btn btn-success mx-3") %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
