<div class="container">
  <h4>ジャンル一覧・追加</h4>
    <%= form_with model: [:admin, @genre] do |f| %>
      <h6>ジャンル名</h6>
      <%= f.text_field :name %>
      <%= f.submit '新規登録', class:"btn btn-success" %>
	  <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <%=link_to edit_admin_genre_path(genre.id) do %>編集する<% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>
