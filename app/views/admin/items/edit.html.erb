<div class="container">
  <h2>商品編集</h2>
  <%= form_with model: [:admin, @item] do |f| %>
    <div class="form group">
      <label for="item_image">商品画像</label>
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form group">
      <label for="item_name">商品名</label>
      <%= f.text_field :name %>
    </div>
    <div class="form group">
      <label for="item_introduction">商品説明</label>
      <%= f.text_area :introduction %>
    </div>
    <div class="form group">
      <label for="item_genre">ジャンル</label>
      <%= f.collection_select :genre_id, Genre.order(:name), :id, :name, {include_blank: "--選択してください--"},{ id: "genre_id", class: "genre_class" } %>
    </div>
    <div class="form group">
      <label for="item_image">税抜価格</label>
      <%= f.text_field :price %>円
    </div>
    <div class="form group">
      <label for="item_is_active">販売ステータス</label>
      <%= f.radio_button :is_active, value: true %>
      <%= f.label :is_active, "販売中" %>
      
      <%= f.radio_button :is_active, value: false %>
      <%= f.label :is_active, "販売停止中" %>
    </div>
    <div class="form group">
      <%= f.submit '変更を保存', class:"btn btn-success" %>
    </div>
	<% end %>
</div>